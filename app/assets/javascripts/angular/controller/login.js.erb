app.controller('LoginCtrl', ['$scope', function($scope){
$scope.login = function () {
    $auth.$auth.submitLogin($scope.loginForm).
     then(function(resp) {
       // handle success response
       console.log(resp);

       // redirect back to root when registration succesfull 
       $location.path('/');
     }).
     catch(function(resp) {
       // handle error response
       console.log(resp);
     });
  };
}])